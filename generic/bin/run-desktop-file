#!/bin/bash

main(){
  DesktopFile="$1"
  shift
  InputFiles=("$@")
  eval TryExec="$(grep -E "^TryExec=" "$DesktopFile" | sed 's|^TryExec=||g')"
  eval Exec=("$(grep -E "^Exec=" "$DesktopFile" | sed -E 's/^Exec=|%[UuFf]//g')")
  ! ( which "$TryExec" &>/dev/null || [ -x "$TryExec" ] ) && exit 1
  "${Exec[@]}" "${InputFiles[@]}"
}

main "$@"
